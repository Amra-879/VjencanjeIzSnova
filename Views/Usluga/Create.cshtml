@model VjencanjeIzSnova_July.ViewModels.UslugaViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Usluge</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PartnerId" class="control-label"></label>
                <select asp-for="PartnerId" class="form-control" asp-items="ViewBag.PartnerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Naziv" class="control-label"></label>
                <input asp-for="Naziv" class="form-control" />
                <span asp-validation-for="Naziv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KategorijaId"></label>
                <select asp-for="KategorijaId" asp-items="@(new SelectList(Model.KategorijeList, "KategorijaId", "Naziv"))" class="form-control"></select>
                <span asp-validation-for="KategorijaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KontaktMail" class="control-label"></label>
                <input asp-for="KontaktMail" class="form-control"/>
                <span asp-validation-for="KontaktMail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OpisUsluge" class="control-label"></label>
                <textarea asp-for="OpisUsluge" class="form-control" rows="5"></textarea>
                <span asp-validation-for="OpisUsluge" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CjenovniRang" class="control-label"></label>
                <input asp-for="CjenovniRang" class="form-control" />
                <span asp-validation-for="CjenovniRang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InfoOKompaniji" class="control-label"></label>
                <textarea asp-for="InfoOKompaniji" class="form-control"></textarea>
                <span asp-validation-for="InfoOKompaniji" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Detalji" class="control-label"></label>
                <div class="d-flex align-items-center">
                    <div id="detalji-container" class="flex-grow-1">
                        <input type="text" class="form-control" name="Detalji[]" multiple/>
                </div>
                    <button type="button" id="dodaj-novi-detalj" class="btn btn-secondary ml-2">+</button>
                <span asp-validation-for="Detalji" class="text-danger"></span>
                </div>
            </div>

           <!-- <div class="form-group">
                <div class="d-flex align-items-center">
                    <label for="Slike" class="mr-2">Upload Images</label>
                    <div id="image-container" class="flex-grow-1">
                        <input type="file" name="Slike" class="form-control" multiple />
                    </div>
                    <button type="button" id="dodaj-jos-slika" class="btn btn-secondary ml-2">+</button>
                </div>
            </div> -->
            <!--
            <div class="form-group">
                <input type="file"
                       class="filepond"
                       name="filepond"
                       multiple
                       data-max-file-size="3MB"
                       data-max-files="3" />

            </div>
            -->
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
     


        document.getElementById('dodaj-novi-detalj').addEventListener('click', function () {
            var container = document.getElementById('detalji-container');
            var input = document.createElement('input');
            input.type = 'text';
            input.className = 'form-control';
            input.name = 'Detalji[]';
            container.appendChild(input);
            
        });
    </script>
}
