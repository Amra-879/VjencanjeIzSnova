@model VjencanjeIzSnova_July.ViewModels.CreatePartnerViewModel
@{
    ViewData["Title"] = "Create Partner";
}

<h1>Create Partner</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="UserType"></label>
        <input asp-for="UserType" class="form-control" />
        <span asp-validation-for="UserType" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Ime"></label>
        <input asp-for="Ime" class="form-control" />
        <span asp-validation-for="Ime" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Mobitel"></label>
        <input asp-for="Mobitel" class="form-control" />
        <span asp-validation-for="Mobitel" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="KategorijaId"></label>
        <select asp-for="KategorijaId" asp-items="@(new SelectList(Model.KategorijeList, "KategorijaId", "Naziv"))" class="form-control"></select>
        <span asp-validation-for="KategorijaId" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
</form>
